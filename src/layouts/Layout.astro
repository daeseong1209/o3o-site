---
import '../styles/global.css';

type Props = {
	title?: string;
	description?: string;
};

const { title = 'o3o.team', description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{description ? <meta name="description" content={description} /> : null}
	</head>
	<body>
		<header class="site-header">
			<div class="container">
				<a class="brand" href="/">o3o.team</a>
				<nav class="nav">
					<a href="/blog">Blog</a>
					<a href="/admin" rel="nofollow">CMS</a>
				</nav>
			</div>
		</header>
		<main class="container main">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container">
				<p>Â© {new Date().getFullYear()} o3o.team</p>
			</div>
		</footer>
	</body>
</html>
